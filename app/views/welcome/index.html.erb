<h1>Latest News</h1>

<% @articles.each do |news_item| %>
  <% if news_item['image'] %>
     <% image = news_item['image'] %>
  <% else %>
     <% image = 'https://images.unsplash.com/photo-1496979551903-46e46589a88b?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=cda12b505afa1beb06e49d89014cbd65&auto=format&fit=crop&w=634&q=80'%>
  <% end %>
  <div class="example-2 card">
      <div class="wrapper" style="background-image: url(<%= image %>);">
        <div class="header">
          <div class="date">
            <span class="day">17</span>
            <span class="month">May</span>
            <span class="year">2023</span>
          </div>
          <ul class="menu-content">
            <li>
              <a href="#" class="fa fa-bookmark-o"></a>
            </li>
            <li><a href="#" class="fa fa-heart-o"><span>18</span></a></li>
            <li><a href="#" class="fa fa-comment-o"><span>3</span></a></li>
          </ul>
        </div>
        <div class="data">
          <div class="content">
            <span class="author"><%= news_item['author'] %></span>
            <h1 class="title"><a href="#"><%= news_item['title'] %></a></h1>
            <p class="text"><%= news_item['description'] %></p>
            <a href="#"><%= news_item['url'] %></a>
          </div>
        </div>
      </div>
    </div>
<% end %>

<%= button_to "Sign Out", destroy_user_session_path, method: :delete %>
