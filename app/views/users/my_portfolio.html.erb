<h1>My Portfolio</h1>
<div class="search-aria mt-5">
  <h3>Search Stocks </h3>
   <%= form_tag search_stock_path, method: :get do %>
    <div class="form-group row">
      <div class="col-sm-9">
         <%= text_field_tag :stock , params[:stock], placeholder: "search....." , class: "form-control form-control-lg" %>
      </div>
      <div class="col-sm-3">
       <%= button_tag type: :submit, class: "btn btn-success" do %>
  <%= content_tag(:i, "", class: "bi bi-search", "aria-hidden" => "true") %>
    <% end %>

 </div>
</div>
   <% end %>
</div>
<div id ="results">
</div>

<% if !@tracked_stocks.empty? %>
  <%= render 'stocks/list' %>
<% end %>